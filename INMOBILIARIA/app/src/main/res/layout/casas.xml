<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    xmlns:card_view="http://schemas.android.com/tools"
    android:minHeight="280dp"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/imageViewList"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:orientation="vertical"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:id="@+id/contenedorList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/VacioList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/precioList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8c000000"
                android:padding="5dp"
                android:text="Precio"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="#ffe3e3e3"
                android:textIsSelectable="false"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/atributosList"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:fontFamily="sans-serif"
                android:text="Descripcion (cuartos, baños, etc)"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/direccionList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Dirección \n asdpq"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lines="2"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>